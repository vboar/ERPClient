<?xml version="1.0" encoding="UTF-8"?>
<erp>
	<!-- 登录窗口 -->
	<loginframe width="540" height="360" windowUp="20">
		<panel className="ui.loginui.LoginPanel" width="540" height="360"
			x="0" y="0" bg="img/login.jpg">
			<buttons>
				<login text="登录" w="80" h="30" x="315" y="240" />
				<quit text="退出" w="80" h="30" x="415" y="240" />
				<setting text="设置" w="80" h="30" x="440" y="15" />
			</buttons>
			<labels>
				<type text="类型" w="100" h="30" x="300" y="80" />
				<id text="I D" w="100" h="30" x="300" y="120" />
				<password text="密码" w="100" h="30" x="300" y="160" />
			</labels>
			<textfields>
				<id w="145" h="30" x="350" y="120" />
				<password w="145" h="30" x="350" y="160" />
			</textfields>
			<comboboxes>
				<usertype w="145" h="30" x="350" y="80">
					<string str="库存管理人员" />
					<string str="进货销售人员" />
					<string str="财务人员" />
					<string str="总经理" />
					<string str="系统管理员" />
				</usertype>
			</comboboxes>
		</panel>
	</loginframe>
	
	<!-- 主窗口 -->
	<frame title="ERP企业进销存管理系统" width="960" height="600" windowUp="20">
	
		<!-- 当前登录用户信息面板 -->>
		<panel className="ui.homeui.LoginUserInfoPanel" width="960"
			height="90" x="0" y="0" bg="img/title.jpg">
			<buttons>
				<mailbox text="" w="40" h="30" x="190" y="54" path="img/2.png" />
			</buttons>
			<labels>
				<username w="100" h="30" x="80" y="15" />
				<id w="100" h="30" x="80" y="35" />
				<img text="" w="240" h="30" x="20" y="20" path="img\1.jpg" />
			</labels>
		</panel>
		
		<!-- 时间显示面板 -->
		<panel className="ui.homeui.TimePanel" width="960"
			height="20" x="0" y="0" bg="img/bottomline.jpg">
			<labels>
				<timelab text="" w="240" h="20" x="500" y="0"/>
			</labels>
		</panel>
		
		<!-- 用户管理面板 -->
		<panel className="ui.userui.UserPanel" width="960" height="510"
			x="0" y="90" bg="img/mainpanel.jpg">
			<buttons>
				<add text="" w="80" h="32" x="370" y="36" path="img\adduser.png" pathroll="img\adduser1.png"/>
				<delete text="" w="80" h="32" x="450" y="36" path="img\deluser.png"  pathroll="img\deluser1.png"/>
				<modify text=""  w="80" h="32" x="530" y="36" path="img\upduser.png"  pathroll="img\upduser1.png"/>
				<showall text=""  w="100" h="30" x="610" y="37" path="img\show.png"  pathroll="img\show1.png"/>
				<find text=""  w="24" h="24" x="910" y="40" path="img\search.png"  pathroll="img\search1.png"/>
				<usermanage text="" w="100" h="40" x="" y="" />
			</buttons>
			<labels>
				<userlist text="" w="120" h="32" x="220" y="35" path="img\userlist.png"/>
				<modulename text="" w="120" h="30" x="205" y="2" path="img\usermanage.png"/>
				<admin text="" w="150" h="30" x="25" y="2" path="img\admin.png"/>
				<usermanagebtn text="" w="150" h="32" x="35" y="60" path="img\usermanagebtn.png"/>
			</labels>
			<textfields>
				<findinput w="175" h="28" x="725" y="38" />
			</textfields>
			<tablepane className="ui.userui.UserTablePane" width="730"
				height="376" x="210" y="75">
				<columnnames>
					<columnname name="ID" />
					<columnname name="用户名" />
					<columnname name="密码" />
					<columnname name="类型" />
					<columnname name="权限" />
				</columnnames>
			</tablepane>
		</panel>
		
		<!-- 客户管理面板 -->>
		<panel className="ui.userui.CustomerPanel" width="960" height="510"
			x="0" y="90" bg="img/mainpanel.jpg">
			<buttons>
				<add text="" w="80" h="32" x="370" y="36" path="img\adduser.png" pathroll="img\adduser1.png"/>
				<delete text="" w="80" h="32" x="450" y="36" path="img\deluser.png"  pathroll="img\deluser1.png"/>
				<update text=""  w="80" h="32" x="530" y="36" path="img\upduser.png"  pathroll="img\upduser1.png"/>
				<show text=""  w="100" h="30" x="610" y="37" path="img\show.png"  pathroll="img\show1.png"/>
				<find text=""  w="24" h="24" x="910" y="40" path="img\search.png"  pathroll="img\search1.png"/>
				<customermanage text="" w="100" h="40" x="" y="" />
			</buttons>
			<labels>
				<customerlist text="" w="120" h="32" x="220" y="35" path="img\userlist.png"/>
				<modulename text="" w="120" h="30" x="205" y="2" path="img\usermanage.png"/>
				<salesman text="" w="150" h="30" x="25" y="2" path="img\admin.png"/>
				<customermanagebtn text="" w="150" h="32" x="35" y="60" path="img\usermanagebtn.png"/>
			</labels>
			<textfields>
				<findinput w="175" h="28" x="725" y="38" />
			</textfields>
			<tablepane className="ui.customerui.CustomerTablePane" width="730"
				height="376" x="210" y="75">
				<columnnames>
					<columnname name="编号" />
					<columnname name="姓名" />
					<columnname name="类别" />
					<columnname name="VIP等级" />
					<columnname name="电话" />
					<columnname name="地址" />
					<columnname name="邮编" />
					<columnname name="邮箱" />
					<columnname name="应收额度" />
					<columnname name="应收" />
					<columnname name="应付" />
					<columnname name="默认业务员" />
				</columnnames>
			</tablepane>
		</panel>
	</frame>
	
	<!-- 用户信息对话框 -->
	<userinfodialog width="500" height="280" x="230" y="180">
		<buttons>
			<commit text="提交" w="80" h="30" x="150" y="210" />
			<cancel text="取消" w="80" h="30" x="270" y="210" ></cancel>
		</buttons>
		<labels>
			<id text="用户名" w="40" h="30" x="30" y="20" />
			<idtip text="请输入2-14位内数字或英文字符" w="200" h="30" x="80" y="46" 
				 font="微软雅黑" fontsize="11"  color="true" r="255" g="100" b="10"/>
			<name text="真实姓名" w="80" h="30" x="240" y="20" />
			<nametip text="请输入2-14位内中英文字符" w="200" h="30" x="300" y="46" 
		    	font="微软雅黑" fontsize="11"  color="true" r="255" g="100" b="10" />
			<password text="密码" w="40" h="30" x="30" y="80" />
			<passwordtip text="请输入6-14位内数字或英文字符" w="200" h="30" x="290" y="80" 
				font="微软雅黑" fontsize="11"  color="true" r="255" g="100" b="10"/>
			<type text="类型" w="40" h="30" x="30" y="140" />
			<permission text="权限" w="40" h="30" x="240" y="140" />
		</labels>
		<textfields>
			<id w="130" h="30" x="80" y="20" />
			<password w="200" h="30" x="80" y="80" />
			<name w="130" h="30" x="300" y="20" />
		</textfields>
		<comboboxes>
			<type w="130" h="30" x="80" y="140">
				<string str="库存管理人员" />
				<string str="进货销售人员" />
				<string str="财务人员" />
				<string str="总经理" />
				<string str="系统管理员" />
			</type>
			<permission w="130" h="30" x="300" y="140">
				<string str="普通权限" />
				<string str="最高权限" />
			</permission>
		</comboboxes>
	</userinfodialog>
	
	<!-- 客户信息对话框 -->
	<customerinfodialog width="500" height="280" x="230" y="180">
		<buttons>
			<commit text="提交" w="80" h="30" x="150" y="210" />
			<cancel text="取消" w="80" h="30" x="270" y="210" />
		</buttons>
		<labels>
			<category text="客户类别" w="40" h="30" x="30" y="20" />
			<level text="客户级别" w="60" h="30" x="240" y="20" />
			<name text="姓名" w="40" h="30" x="30" y="80" />
			<phonenumber text="电话" w="40" h="30" x="30" y="140" />
			<address text="地址" w="40" h="30" x="240" y="140" />
			<postalcode text="邮编" w="40" h="30" x="240" y="140" />
			<email text="电子邮箱" w="40" h="30" x="240" y="140" />
			<creditlimit text="应收额度" w="40" h="30" x="240" y="140" />
			<salesman text="默认业务员" w="40" h="30" x="240" y="140" />
		</labels>
		<textfields>
			<name w="40" h="30" x="30" y="80" />
			<phonenumber w="40" h="30" x="30" y="140" />
			<address w="40" h="30" x="240" y="140" />
			<postalcode w="40" h="30" x="240" y="140" />
			<email w="40" h="30" x="240" y="140" />
			<creditlimit w="40" h="30" x="240" y="140" />
			<salesman w="40" h="30" x="240" y="140" />
		</textfields>
		<comboboxes>
			<type w="130" h="30" x="80" y="140">
				<string str="供应商" />
				<string str="销售商" />
			</type>
			<type w="130" h="30" x="80" y="140">
				<string str="VIP1" />
				<string str="VIP2" />
				<string str="VIP3" />
				<string str="VIP4" />
				<string str="VIP5" />
			</type>
		</comboboxes>
